@model Specification

@{
    ViewData["Title"] = "Details";
}
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Specification</h4>
                    <span>
                        Bütün spesifikasiyaların siyahısı
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Brendlər</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card">
        <div class="card-block">
            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                       <p class="form-control">@Model.Name</p>
                        <span asp-validation-for="Name" class="messages"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Id" />
                      

                        <a asp-action="edit" asp-route-id="@Model.Id" type="submit"
                           class="btn btn-warning m-b-0">
                            Edit
                        </a>
                        <a asp-action="index" type="submit"
                           class="btn btn-primary m-b-0">
                            Go to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
